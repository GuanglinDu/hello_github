class Calculator(object):
	# define class to simulate a simple calculator
	def __init__(self):
		# Start with zero
		self.current = 0
	
	def add(self, amount):
		# add number to current
		self.current += amount
	
	def getCurrent(self):
		return self.current

# Use the class
from ClassOne import *
myBuddy = Calculator()
myBuddy.add(2)
sum1 = myBuddy.getCurrent()
# Why print 2 times?
print("sum = %i" % sum1)
